  <task name="GlobalVerif" cycledefs="acc_vx" maxtries="3">
    <command>&SCRIPTS;/ACVerif.ksh</command>
    <account>&PROJECT;</account>
    <partition>&SERVICE;</partition>
    &PARTITION_JET;
    <walltime>00:40:00</walltime>
    <cores>1</cores>
    <jobname><cyclestr>GlobalVerif_@H</cyclestr></jobname>
    <join><cyclestr>&FV3GFS_LOG;/verif/GlobalVerif_@Y@m@d@H_&MODL;.log</cyclestr></join>
    <envar><name>GLOBAL_HOME</name><value>&FV3GFS_HOME;</value></envar>
    <envar><name>GLOBAL_RUN</name><value>&FV3GFS_RUN;/&PSLOT;</value></envar>
    <envar><name>GLOBAL_POST_DIR</name><value>&FV3GFS_POST_DIR;</value></envar>
    <!-- OPS uses the GSD /public directory structure, which contains files from EMC-->
    <!-- EXP uses the GSD FIM workflow directory structure-->
    <!-- EXP uses the GSD FV3 workflow directory structure-->
    <envar><name>GLOBAL_TYPE</name><value>FV3</value></envar>
    <envar><name>SCRIPTS</name><value>&SCRIPTS;</value></envar>
    <envar><name>CFG_FILE</name><value>&SCRIPTS;/GridStatACConfig</value></envar>
    <envar><name>LOG_DIR</name><value>&FV3GFS_LOG;/verif</value></envar>
    <envar><name>yyyymmddhhmm</name><value><cyclestr>@Y@m@d@H@M</cyclestr></value></envar>
    <envar><name>MET_MODULE</name><value>&MET_MODULE;</value></envar>
    <envar><name>MET_VERSION</name><value>&MET_VERSION;</value></envar>
    <envar><name>ANALYSIS</name><value>&ANX_MODEL;</value></envar>
    <envar><name>ANX_VERIF_DIR</name><value><cyclestr>&FV3GFS_RUN;/&PSLOT;/gfs.@Y@m@d/@H/verif/&ANX_MODEL;</cyclestr></value></envar>
    <envar><name>GLOBAL_DATA_DIR</name><value>&FV3GFS_VERIF_DIR;</value></envar>
    <envar><name>CLIMATE_FILE</name><value><cyclestr>&CLIMATE_DIR;/cmean_1d.1959@m@d</cyclestr></value></envar>
    <envar><name>MODEL</name><value>&AC_MODEL_NAME;</value></envar>
    <envar><name>DBI_USER</name><value>&DBI_USER;</value></envar>
    <envar><name>DBI_PASS</name><value>&DBI_PASS;</value></envar>
    <dependency>
       <datadep age="120"><cyclestr>&FV3GFS_RUN;/&PSLOT;/gfs.@Y@m@d/@H/verif/&ANX_MODEL;/@y@j@H@M0000</cyclestr></datadep>
  <!--
     <and>
       <datadep age="120"><cyclestr>&FV3GFS_RUN;/&PSLOT;/gfs.@Y@m@d/@H/verif/&ANX_MODEL;/@y@j@H@M0000</cyclestr></datadep>
       <datadep age="300"><cyclestr>&FV3GFS_RUN;/&PSLOT;/gfs.@Y@m@d/@H/&FV3GFS_POST_DIR;/@y@j@H@M0000.g2</cyclestr></datadep>
      </and>
  -->
    </dependency>
  </task>
