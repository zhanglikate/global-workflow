<!-- get the ANX files needed for verification -->
  <task name="ANX_verif_file_realtime" cycledefs="acc_vx" maxtries="4">
    <command>&SCRIPTS;/anx_verif_file_realtime.ksh</command>
    <account>&PROJECT;</account>
    <cores>1</cores>
    <partition>&SERVICE;</partition>
    &PARTITION_JET;
    <walltime>00:10:00</walltime>
    <jobname><cyclestr>ANXFile_@H</cyclestr></jobname>
    <join><cyclestr>&FV3GFS_LOG;/gfsfile/ANXFile_@Y@m@d@H.log</cyclestr></join>
    <envar><name>WFM</name><value>1</value></envar>
    <envar><name>GLOBAL_RUN</name><value>&FV3GFS_RUN;/&PSLOT;</value></envar>
    <envar><name>ANX_DIR</name><value>&GFS_VERIF_DIR;</value></envar>
    <envar><name>HOUR</name><value><cyclestr>@H</cyclestr></value></envar>
    <envar><name>yyyymmddhhmm</name><value><cyclestr>@Y@m@d@H@M</cyclestr></value></envar>
    <envar><name>ANX_MODEL</name><value>GFS</value></envar>
    <envar><name>CNVGRIB</name><value>&CNVGRIB;</value></envar>
    <dependency>
        <datadep age="120"><cyclestr>&GFS_VERIF_DIR;/@y@j@H@M0000</cyclestr></datadep>
    </dependency>
  </task>
